{
  "app_listening_port": 8080,
  "default_folder_name": "@default",
  "mock_file_not_found_http_code": 404,
  "mock_file_invalid_http_code": 500,
  "logger": {
    "name": "api-mockiji",
    "filepath": "../logs/api-mockiji.log",
    "level": "trace"
  },
  "enable_extra_http_responses_headers": {
    "mock_file_not_found": true,
    "mock_file_is_found_and_ok": true,
    "mock_file_is_found_and_empty": true,
    "mock_file_is_found_and_unreadable": true
  },
  "listen_to_these_api_base_urls": {
    "api": "../../../data"
  },
  "mock_files_authorized_extensions": ["json","jsmock"],
  "authorization_token": [
    {
      "regexp": "/api/v1/sites/(-)",
      "token_replacement_key": "site_id"
    },
    {
      "regexp": "\/api\/v1\/weather-stations\/(-)",
      "token_replacement_key": "weather_station_id"
    }
  ]
}
